<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/run"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:id="@+id/runingImageView"/>

    <TextView
        android:text="Ran on 2016-10-18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:id="@+id/date_label_list"
        android:textColor="#000000"

        android:layout_alignTop="@+id/runingImageView"
        android:layout_toEndOf="@+id/runingImageView"/>

    <TextView
        android:text="12:31 min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date_label_list"
        android:id="@+id/distance_list_item"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/date_label_list"/>

    <TextView
        android:text="9.4 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/distance_list_item"
        android:layout_toEndOf="@+id/distance_list_item"
        android:layout_marginStart="16dp"
        android:id="@+id/time_list_item"/>
</RelativeLayout>